<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="false">2000</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>
		<control type="image">
			<description>Background Image</description>
			<width>100%</width>
			<height>100%</height>
			<aspectratio>scale</aspectratio>
			<texture>background.png</texture>
		</control>
		<control type="list" id="2000">
			<left>750</left>
			<top>75</top>
			<width>500</width>
			<height>330</height>
			<onleft>3010</onleft>
			<onright>2001</onright>
			<onup></onup>
			<ondown></ondown>
			<pagecontrol>2001</pagecontrol>
			<scrolltime tween="quadratic" easing="out">300</scrolltime>
			<orientation>vertical</orientation>
			<itemlayout height="55" width="400">
				<control type="label">
					<left>0</left>
					<top>0</top>
					<width>500</width>
					<height>45</height>
					<font>font60</font>
					<aligny>center</aligny>
					<textcolor>FF000033</textcolor>
					<shadowcolor>white</shadowcolor>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="55" width="400">
				<control type="label">
					<left>0</left>
					<top>0</top>
					<width>500</width>
					<height>45</height>
					<font>font60</font>
					<aligny>center</aligny>
					<align>right</align>
					<textcolor>white</textcolor>
					<shadowcolor>FF000033</shadowcolor>
					<label>[B]$INFO[ListItem.label][/B]</label>
					<scroll>true</scroll>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="2001">
			<description>slider control</description>
			<left>1267</left>
			<top>75</top>
			<width>5</width>
			<height>330</height>
			<visible>true</visible>
			<texturesliderbackground colordiffuse="FF000033" >rc-button-focus.png</texturesliderbackground>
			<texturesliderbar>rc-button-nofocus.png</texturesliderbar>
			<texturesliderbarfocus>rc-button-focus.png</texturesliderbarfocus>
			<textureslidernib>nib.png</textureslidernib>
			<textureslidernibfocus>nib-focus.png</textureslidernibfocus>
			<pulseonselect></pulseonselect>
			<orientation>vertical</orientation>
			<onup>2</onup>
			<ondown>3</ondown>
			<onleft>2000</onleft>
			<onright>1</onright>
			<showonepage>false</showonepage>
		</control>
		<control type="multiimage" id="1000">
			<description>slideshow control</description>
			<left>5</left>
			<top>5</top>
			<width>450</width>
			<height>300</height>
			<visible>true</visible>
			<imagepath>special://userdata\addon_data\plugin.video.thfczone\temp\matchcenter_slides</imagepath>
			<timeperimage>5000</timeperimage>
			<fadetime>2000</fadetime>
			<pauseatend>10000</pauseatend>
			<randomize>true</randomize>
			<loop>yes</loop>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="multiimage" id="1001">
			<description>slideshow control</description>
			<left>5</left>
			<top>415</top>
			<width>450</width>
			<height>300</height>
			<visible>true</visible>
			<imagepath>special://userdata\addon_data\plugin.video.thfczone\temp\matchcenter_slides</imagepath>
			<timeperimage>5000</timeperimage>
			<fadetime>2000</fadetime>
			<pauseatend>10000</pauseatend>
			<randomize>true</randomize>
			<loop>yes</loop>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="image" id="1003">
			<left>775</left>
			<top>415</top>
			<width>450</width>
			<height>300</height>
			<aspectratio>keep</aspectratio>
			<align>center</align>
			<aligny>center</aligny>
			<texture>$INFO[ListItem.Art(poster)]</texture>
		</control>
	</controls>
</window>
