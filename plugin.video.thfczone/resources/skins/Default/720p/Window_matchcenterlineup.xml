<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="false">2000</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>
		<control type="image">
			<description>Background Image</description>
			<width>100%</width>
			<height>100%</height>
			<aspectratio>scale</aspectratio>
			<texture>background.png</texture>
		</control>
		<control type="image" id="4000">
			<description>hometeam pitch background</description>
			<left>5</left>
			<top>5</top>
			<width>490</width>
			<height>640</height>
			<texture>pitch.jpg</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image" id="4001">
			<description>awayteam pitch background</description>
			<left>785</left>
			<top>5</top>
			<width>490</width>
			<height>640</height>
			<texture>pitch.jpg</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image" id="4002">
			<description>hometeam badge</description>
			<animation effect="fade" end="30" time="200">WindowOpen</animation>
			<left>5</left>
			<top>5</top>
			<width>490</width>
			<height>640</height>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image" id="4003">
			<description>awayteam badge</description>
			<animation effect="fade" end="30" time="200">WindowOpen</animation>
			<left>785</left>
			<top>5</top>
			<width>490</width>
			<height>640</height>
			<aspectratio>scale</aspectratio>
		</control>
	</controls>
</window>