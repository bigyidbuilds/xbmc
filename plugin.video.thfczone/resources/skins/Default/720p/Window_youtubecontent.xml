<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="false">0</defaultcontrol>
	<menucontrol>0</menucontrol>
	<backgroundcolor>0</backgroundcolor>
	<animation effect="fade" time="200">WindowOpen</animation>
	<animation effect="fade" time="200">WindowClose</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image">
			<width>100%</width>
			<height>100%</height>
			<texture>background.png</texture>
		</control>
		<control type="group">
			<left>5</left>
			<top>5</top>
			<control type="image">
				<width>1270</width>
				<height>250</height>
				<texture colordiffuse="FF85764D" border="10">rc-button-focus.png</texture>
			</control>
			<control type="image">
				<width>250</width>
				<height>250</height>
				<texture colordiffuse="FF85764D" border="10">rc-button-focus.png</texture>
			</control>
			<control type="image">
				<width>250</width>
				<height>250</height>
				<left>1020</left>
				<texture colordiffuse="FF85764D" border="10">rc-button-focus.png</texture>
			</control>
			<control type="image" id="1000">
				<left>5</left>
				<top>5</top>
				<width>1260</width>
				<height>240</height>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
		<control type="panel" id="2000">
			<left>27</left>
			<top>260</top>
			<width>1225</width>
			<height>455</height>
			<itemlayout width="175" height="175">
				<control type="image">
					<width>170</width>
					<height>170</height>
					<texture>rc-button-nofocus.png</texture>
				</control>
				<control type="image">
					<left>2</left>
					<top>2</top>
					<width>166</width>
					<height>125</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>
				<control type="label">
					<left>2</left>
					<top>130</top>
					<width>166</width>
					<height>27</height>
					<font>font10</font>
					<textcolor>FF000033</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="175" height="175">
				<control type="image">
					<width>170</width>
					<height>170</height>
					<texture colordiffuse="FF85764D">rc-button-focus.png</texture>
				</control>
				<control type="image">
					<left>2</left>
					<top>2</top>
					<width>166</width>
					<height>125</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>
				<control type="label">
					<left>2</left>
					<top>130</top>
					<width>166</width>
					<height>27</height>
					<font>font10</font>
					<textcolor>FF000033</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<scroll>true</scroll>
				</control>
			</focusedlayout>
		</control>
	</controls>
</window>

